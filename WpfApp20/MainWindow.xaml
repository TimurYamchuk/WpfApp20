<Window x:Class="WpfApp20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp20"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Button Content="Обновить список процессов" 
                Click="UpdateProcesses" 
                Height="30" 
                FontWeight="Bold" 
                VerticalAlignment="Center"/>

        <Button Content="Завершить процесс" 
                Click="EndProcess" 
                Grid.Row="1" 
                Height="30" 
                FontWeight="Bold" 
                VerticalAlignment="Center"/>

        <ListBox x:Name="ProcessList" 
                 Grid.Row="2" 
                 Margin="0,5" />

        <Grid Grid.Row="3" Margin="0,5,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- TextBox to input process path -->
            <TextBox x:Name="ProcessPath" 
                     Height="30" 
                     Grid.Row="0" 
                     Margin="0,0,0,5" 
                     HorizontalAlignment="Stretch" 
                     VerticalAlignment="Center"/>

            <Button Content="Новый процесс" 
                    Click="RunProcess" 
                    Height="30" 
                    Grid.Row="1" 
                    FontWeight="Bold" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
